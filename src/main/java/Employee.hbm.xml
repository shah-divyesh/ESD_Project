<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.neu.csye.pojo.Employee" table="employee">
            <id column="employeeId" name="employeeId" type="int">
                <generator class="native"/>
             </id>
             <property column="firstName" name="firstName" type="string"/>  
             <property column="lastName" name="lastName" type="string"/>
             <property column="emailId" name="emailId" type="string"/> 
             <property column="contactNumber" name="contactNumber" type="string"/> 
             <property column="password" name="password" type="string"/> 
              
    </class>
</hibernate-mapping>